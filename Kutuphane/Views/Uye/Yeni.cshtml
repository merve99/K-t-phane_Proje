@model uyeler
@{
    ViewBag.Title = "Yeni";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="w3-container w3-white">
    <h2><i class="w3-xxlarge fa fa-user"></i>Yeni Üye Ekle</h2>
</div>

@using (Html.BeginForm("Yeni", "Uye", FormMethod.Post, new { @class = "w3-container" }))
{
    <p>

        <label class="thead-light"><b>Ad</b></label>
        <input class="w3-input w3-border w3-sand" name="ad" type="text">
    </p>
    <p>

        <label class="thead-light"><b>Soyad</b></label>
        <input class="w3-input w3-border w3-sand" name="soyad" type="text">
    </p>
    <p>

        <label class="thead-light"><b>Mail</b></label>
        <input class="w3-input w3-border w3-sand" name="mail" type="text">
    </p>
    <p>

        <label class="thead-light"><b>Kullanıcı Adı</b></label>
        <input class="w3-input w3-border w3-sand" name="kullaniciadi" type="text">
    </p>
    <p>

        <label class="thead-light"><b>Şifre</b></label>
        <input class="w3-input w3-border w3-sand" name="sifre" type="text">
    </p>
    <p>

        <label class="thead-light"><b>Telefon</b></label>
        <input class="w3-input w3-border w3-sand" name="telefon" type="text">
    </p>
    <p>

        <label class="thead-light"><b>Okul</b></label>
        <input class="w3-input w3-border w3-sand" name="okul" type="text">
    </p>
    <p>
        <a href="/Uye/index/" class="w3-btn w3-red"><i class="fa fa-fast-backward"></i>&nbsp;Geri</a>
        <button class="w3-btn w3-indigo" type="submit"><i class="fa fa-check"></i>&nbsp;Kaydet</button>
    </p>
}

