@model yazar
@{
    ViewBag.Title = "Yeni";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="w3-container w3-white">
    <h2><i class="w3-xxlarge fa fa-user"></i>Yeni Yazar Ekle</h2>
</div>

@using (Html.BeginForm("Yeni", "Yazar", FormMethod.Post, new { @class = "w3-container" }))
{
<p>

    <label class="thead-light"><b>Yazar Adı</b></label>
    <input class="w3-input w3-border w3-sand" name="ad" type="text">
</p>
    <p>
        <label class="thead-light"><b>Yazar Soyadı</b></label>
        <input class="w3-input w3-border w3-sand" name="soyad" type="text">
    </p>
    <p>
        <label class="thead-light"><b>Detay</b></label>
        <textarea class="w3-input w3-border w3-sand" style="resize:none" name="detay"></textarea>
    </p>
    <p>
        <a href="/Yazar/index/" class="w3-btn w3-red"><i class="fa fa-fast-backward"></i>&nbsp;Geri</a>
        <button class="w3-btn w3-indigo" type="submit"><i class="fa fa-check"></i>&nbsp;Kaydet</button>
    </p>
}


