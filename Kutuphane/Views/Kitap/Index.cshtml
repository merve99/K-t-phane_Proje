@model IEnumerable<kitap>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="w3-container">
    <h2>KİTAPLAR</h2>
    <a href="/Kitap/Yeni" class="w3-btn w3-teal">Yeni Kitap Ekle</a><br /><br />
    @using (Html.BeginForm("index", "Kitap", FormMethod.Get))
    {
        <div class="w3-row w3-section">
            <div class="w3-col" style="width:50px"><button class="w3-button w3-circle w3-ripple w3-grey" type="submit"><i class=" fa fa-search"></i></button></div>
            <div class="w3-rest">
                <input class="w3-input w3-border w3-sand" type="text" name="p" placeholder="Aradığınız Kitabın ismini giriniz">
            </div>
        </div>  }

    <table class="w3-table-all">
        <thead>
            <tr class="w3-light-grey w3-hover-red">
                <th>KİTAP ID</th>
                <th>KİTAP ADI</th>
                <th>KİTAP YAZARI</th>
                <th>KATEGORİSİ</th>
                <th>BASIM YILI</th>
                <th>YAYIN EVİ</th>
                <th>SAYFA</th>
                <th>DURUM</th>
                <th>İŞLEMLER</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr class="w3-hover-red">
                <td>@item.id</td>
                <td>@item.ad </td>
                <td>@(item.yazar.ad+" "+item.yazar.soyad)</td>
                <td>@item.kategori.ad</td>
                <td>@item.basimyil</td>
                <td>@item.yayinevi</td>
                <td>@item.sayfa</td>
                <td>@item.durum</td>
                <td>
                    <a href="/Kitap/Guncelle/@item.id" class="w3-btn w3-white w3-border w3-light-grey w3-round-large">Güncelle</a>
                    @Html.ActionLink("Sil", "Sil", new { id = item.id }, new { @class = "w3-btn w3-white w3-border w3-border-red w3-round-large", onclick = "return confirm('Silmek İstediğinizden Emin Misiniz?')" })
                </td>
            </tr>
        }
    </table>
</div>
